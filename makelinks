convert -define jpeg:size=200x200 $1.jpg -thumbnail '175x143>' /tmp/1.png
convert -fill 'rgb(100,100,50)' -colorize 60%  /tmp/1.png /tmp/2.png
convert -background 'rgb(147,120,80)'  /tmp/1.png -gravity center -extent 177x147 -raise 2 /tmp/3.png
convert -background 'rgb(147,120,80)'  /tmp/2.png -gravity center -extent 177x147 -raise 2 /tmp/4.png
convert /tmp/3.png -font  /usr/share/fonts/TTF/FreeSans.ttf  -fill white -pointsize 25 -annotate +5+120 $2 /tmp/5.png
convert /tmp/4.png -font  /usr/share/fonts/TTF/FreeSans.ttf  -fill white -pointsize 25 -annotate +5+120 $2 /tmp/6.png
convert /tmp/6.png /tmp/5.png -append $1.gif
rm /tmp/*.png
